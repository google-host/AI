#include<iostream>
using namespace std;

class Insertion {
    int a[20];       // Array to hold values (max 20)
    int i, j, min, n;
public:
    Insertion() {
        for (i = 0; i < 20; i++) {
            a[i] = 0;  // Initialize all array elements to 0
        }
    }

    void sort();     // Method to perform selection sort
    void display();  // Method to display sorted array
};

// Selection Sort implementation
void Insertion::sort() {
    cout << "Enter the size of array: ";
    cin >> n;

    cout << "Enter the elements of the unsorted array:\n";
    for (i = 0; i < n; i++) {
        cin >> a[i];
    }

    // Selection sort algorithm
    for (i = 0; i < n - 1; i++) {
        min = i; // Assume current i as minimum
        for (j = i + 1; j < n; j++) {
            if (a[j] < a[min]) {
                min = j; // Update min index if smaller value found
            }
        }
        if (min != i) {
            swap(a[i], a[min]); // Swap only if needed
        }
    }
}

// Display the sorted array
void Insertion::display() {
    cout << "Sorted array elements are:\n";
    for (i = 0; i < n; i++) {
        cout << a[i] << " ";
    }
    cout << endl;
}

int main() {
    Insertion s;
    s.sort();     // Perform sorting
    s.display();  // Show the sorted result
    return 0;
}
