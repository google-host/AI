Lp3
#include<iostream>
using namespace std;
class insertion{
int a[20];
int i, j ,min, n;
public:
insertion(){
for(i=0; i<20; i++){
 a[i]= 0;
}
}
void sort();
void display();
};
void insertion::sort(){
 cout<<"Enter the size of array"<<endl;
 cin>>n;
 cout<<"Enter the elements of unsorted array: "<<endl;
 for(i=0; i<n; i++)
 {
 cin>>a[i];
 }
 for(i=0; i<n-1; i++)
 {
 min = i;
 for( j=i+1; j<n ; j++)
 {
 if(a[j]<a[min])
 {
 min = j;
 }
 }
 if(min!=i){
 swap(a[i],a[min]);
 }
 }
 }
 void insertion::display()
{
 cout<<"Sorted array elements are: "<<endl;
 for(i= 0; i<n; i++){
 cout<<a[i]<<" " <<endl;;
}
}
int main(){
insertion s;
s.sort();
s.display();
return 0;
}
